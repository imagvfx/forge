<!doctype html>
<html> [
	<head> [
		{{template "style"}}
	]
	<body> [
		{{template "nav" $}}
		<div style="display:flex;justify-content:space-between"> [
			<div name="left" style="flex:1"> [
				<h1> [
					{{pathLinks $.Entry.Path}} ({{$.Entry.Type}})
				]
				<h4> [
					Log for {{$.Category}} {{$.Name}}
				]
				<div> [
				{{range $date, $dateLogs := $.UpdateLogsByDate}}
					<div style="height:2rem;display:flex;justify-content:center;align-items:center"> [- {{$date}} -]
					{{range $l := $dateLogs}}
						<div> [
							<div style="font-size:0.9rem"> [{{$l.User}}]
							<div style="display:flex;align-items:end"> [
								<div style="flex:1;border:solid 1px grey;border-radius:5px;padding:8px"> [{{$l.Value}}]
								<div style="width:2px"> []
								<div style="font-size:0.7rem;color:#666"> [{{$l.When.Local.Format "15:04:05"}}]
							]
						]
						<div style="height:1rem"> []
					{{end}}
				{{end}}
				]
			]
			<div name="right" style="width:600px"> [
				<h4> [
					<div style="display:flex"> [
						<a href="?"> [View]
						<div style="width:0.5rem"> []
						<a href="?tab=edit"> [Edit]
						<div style="width:0.5rem"> []
						<a href="?tab=delete"> [Delete]
						<div style="flex:1"> []
						<a href="?tab=logs"> [Logs]
					]
				]
			]
		]
	]
]

