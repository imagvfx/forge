{{define "style"}}
<style> [
	html {
		min-height: 100%;
		display:flex;
		flex-direction: column;
	}
	body {
		flex: 1;
		margin: 0;
		display: flex;
		flex-direction: column;
		border-bottom: 1px solid #DDD;
		font-family: sans-serif;
	}
	a {
		text-decoration: none;
	}
	a:hover {
		text-decoration: underline;
	}
	.main {
		flex: 1;
		display: flex;
		overflow: scroll;
	}
	// left and right is a pair used in main class.
	.left {
		flex: 1;
		border-right: 1px solid #DDD;
		padding: 1rem;
		background-color: #F7F7F7;
	}
	.right {
		width: 600px;
		padding: 1rem;
	}
	// one is used alone in main class.
	.one {
		padding: 1rem;
		flex: 1;
	}
]
{{end}}
